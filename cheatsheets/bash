--- Functions ---

# Simple function that prints one parameter. Always returns success
simple(){
	echo "This is the only param: $1"
	return 0
}

--- Arrays ---

# Arrays can be defined like this
arr=(foo bar)

# And their values can be iterated over like this
for i in "${arr[*]}"; do echo "$i"; done

--- Loops ---

# Iterate over a sequence of numbers
for i in {1..10}; do
	echo $i
done

# Read a text file line by line
while read -r line; do
	echo "$line"
done < "/path/to/file"

# Iterate through lines of a command
while read -r file; do
    echo $file;
done <<< $(<command>)

--- Misc ---

# Convert filenames from png -> webp
for f in *.png; do echo ${f%.*}.webp; done
